/* 登陆 */
.login{
  width: 90%;
  margin: 0 auto;

}
.login .login_input{
  width: 100%;
  height: 56px;
  background-color: #EDEDED;
  margin: 10px auto;
  border-radius: 40px;
  padding-left: 30px;
  line-height: 55px;
}
.login .login_input text{
  float: left;
}
.login .login_input input{
  width: 80%;
  float: left;
  padding-left: 20px;
  height: 100%;
}
