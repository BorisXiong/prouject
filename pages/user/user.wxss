.Mine {
  width: 95%;
  height: 207px;
  margin: 20px 0;
  /* background-color: #7EC8EC; */
  background: url(http://m.qpic.cn/psc?/V519zvyD1C0EL63KyDum1jWkcI0Igc3R/ruAMsa53pVQWN7FLK88i5hICgTpdnSqm51qWImnEs9OfNk.ByA57.bgvyNAuzoHt9gmUu27Q3WsNKo1HGaiZQcUAU8f33*P.LVyav3XIj9s!/b&bo=cAh1BXAIdQUBByA!&rf=viewer_4) no-repeat;
  background-size: 100% 100%;
  /**/
  /* http://mms0.baidu.com/it/u=3258878685,2934233853&fm=253&app=138&f=JPEG&fmt=auto&q=75?w=896&h=500 */
