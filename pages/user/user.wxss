  padding-left: 22px;
  border-radius: 0px 20px 20px 0px;
  box-shadow: 1px 1px 2px 1px rgb(104, 104, 104);
  position: relative;
  transition: 1s;
}

.Mine .u_image {
  width: 38%;
  height: 50px;
  /* background-color: aqua; */
  position: absolute;
  top: 30px;
  right: 20px;
  line-height: 50px;
}

.Mine .u_image view {
  color: rgba(250, 250, 250, 100);
  font-size: 28px;
  float: left;
  font-weight: 600;
}

.Mine .u_image image {
  display: flex;
  width: 48px;
  height: 48px;
  background-color: #7EC8EC;
  float: right;
  border-radius: 50%;
  border: 1px solid #fff;
}

.Mine .ltop_z {
  width: 25px;
  height: 60px;
  line-height: 20px;
  /* background-color: #CFCFCF; */
  line-height: 16px;
  font-size: 13px;
  text-align: center;
  font-family: Arial;
  position: relative;
}

.Mine .ltop_z text {
  position: absolute;
  top: 2px;
  left: 0;
  z-index: 99;
}

.Mine .ltop_z .juxin1 {
  width: 20px;
  height: 50px;
  opacity: 0.52;
  background-color: rgba(255, 255, 255, 100);
  color: rgba(244, 243, 242, 100);
  border: 1px solid rgba(62, 101, 5, 95);
}

.Mine .ltop_z .juxin2 {
  width: 20px;
  height: 50px;
  opacity: 0.3;
  background-color: rgba(255, 255, 255, 100);
  color: rgba(244, 243, 242, 100);
  border: 1px solid rgba(62, 101, 5, 99);
  position: absolute;
  top: 2px;
  left: 5px;
}

.Mine .biaoz {
  width: 15%;
  height: 10%;
  background-color: rgba(252, 252, 252);
  /* opacity: .7; */
  border-radius: 10px;
  text-align: center;
  position: absolute;
  top: 90px;
  right: 4%;
  color: #01a1f1;
  font-weight: 600;
}

.Mine .b_con {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 40%;
  line-height: 20px;
  /* opacity: .4; */
  background-color: rgba(255, 255, 255, 0.4);
  color: rgba(16, 16, 16, 100);
  font-size: 14px;
  text-align: center;
  font-family: Arial;
  border-radius: 0 0 20px 0px;
  padding-top: 20px;
}

.Mine .b_con .box {
  width: 30%;
  height: 100%;
  /* background-color: aqua; */
  margin: 0 1.5%;
  float: left;
  opacity: 1;
}

.Mine .b_con .box view {
  line-height: 24px;
  font-size: 19px;
}

.Mine .b_con .box view text {
  color: #4e4e4e;
  font-size: 14px;
}

.Mine .b_con .xgun {
  width: 1rpx;
  height: 24px;
  box-shadow: 0px -2rpx 2rpx 0px rgba(201, 196, 196, 40);
  border: 1px solid rgba(229, 228, 228, 48);
  position: absolute;
  top: 35%;
  left: 33%;
}
.Mine .b_con .xgun1{
