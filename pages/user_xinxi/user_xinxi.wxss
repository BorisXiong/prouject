page{
  background-color: #A5ACB2;
}
.u_toux{
  width: 120px;
  height: 120px;
  margin: 20px auto;
  border-radius: 50%;
  position: relative;
  text-align: center;
}
.u_toux image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
  box-shadow: 2px 2px 5px 2px #E5E5E5;
}
.u_toux text{
  position: absolute;
  right: 0;
  bottom: 5%;
  width: 22%;
  height: 22%;
  color: #000000;
  background-color: #ffffff;
  border-radius: 50%;
  box-shadow: 2px 2px 5px 2px #E5E5E5;
  line-height: 180%;
}
.box{
  width: 90%;
  min-height: 100px;
  height: auto !important;
  margin: 20px auto;
  background-color: #ffffff;
  border-radius: 10px;
  overflow: hidden;
}
.box .m_li{
  height: 50px;
  line-height: 50px;
  padding: 0 0 0 20px;
  border-bottom:1px solid #E5E5E5;
  font-size: 18px;
  position: relative;
}
.box .m_li image{
  width: 40px;
  height: 40px;
  background-color: #000000;
  border-radius: 50%;
  /* float: right; */
  margin-right: 10%;
  margin-top: 5px;
}
.box .m_li text{
  float: right;
  margin-right: 20px;
  font-weight: 800;
}
.box .m_li .co_nr{
  width: 40%;
  height: 100%;
  /* background-color: cornflowerblue; */
  position: absolute;
  left: 33%;
  top: 0;
}

/* a按钮 */
.btu{
  width: 90%;
  height: 50px;
  background-color: #ffffff;
  margin: 10px auto;
  border-radius: 10px;
}