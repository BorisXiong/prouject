/* pages/Choice/Choice.wxss */
.page{
  width: 100%;
  height: 100vh;
  background: linear-gradient(to right,#FFEFE5,#DBFBFA);
  border-radius: 20px 20px 0 0 ;
  overflow: hidden;
}
.page .xuan_top{
  width: 92%;
  height: 10%;
  /* background-color: antiquewhite; */
  margin: 10px auto;
  overflow: hidden;
}
.page .xuan_top .nav_left_items{
  display: flex;
  width: 20%;
  height: 20px;
  float: left;
  background-color: #FFFFFF;
  color: #234572;
  margin: 10% 1% 0 3.5%;
  text-align: center;
  border: 1px solid #5C7699;
  border-radius: 10px;
  font-size: 12px;
  padding-left: 2%;
  box-shadow: 3rpx	4rpx 16rpx 3rpx rgba(33, 87, 194, 0.3);
}
.page .xuan_top .nav_left_items text{
  margin-left: 8%;
}
/* 选中 */
.page .xuan_top .nav_left_items.active {
  background: #224571;
  border: 1px solid #FFFFFF;
  color: #FFFFFF;
}

/* xuan_bottom选择内容 */
.xuan_bottom{
  width: 90%;
  height: 70%;
  margin: 10px auto;
  background-color: #FFFF;
  border-radius: 10px;
  position: relative;
  padding-left: 2%;
  overflow: hidden;
  box-shadow: 3rpx	6rpx 8rpx 4rpx rgba(173, 167, 167, 0.3);
}
.father-size{
  width: 100%;
  height: 50vh;
  
}
 .father-size .size {
  width: 100%;
  height: 50vh;

}
.xuan_bottom .zuowei{
  width: 13%;
  /* height: 16%; */
  /* background-color: aqua; */
  margin: 2% 2% 2% 1%;
  text-align: center;
  float: left;
 
}
.xuan_bottom .zuowei text{
  display: flex;
  width: 100%;
  height: 40px;
  font-size: 55px;
  line-height: 80%;
  color: #C4C4C4;
}



.xuan_bottom .tishi{
  width: 100%;
  height: 6%;
  /* background-color: antiquewhite; */
  position: absolute;
  left: 0;
  bottom: 2%;
  text-align: center;
}
.xuan_bottom .tishi text{
  font-size: 18px;
}

.xuan_bottom .tishi text:nth-child(2),
.xuan_bottom .tishi text:nth-child(3){
  margin-left: 10%;
}


/* bottom_but */
.bottom_but{
  width: 100%;
  height: 10%;
  /* background-color: #FFFFFF; */
  margin: 20px 0;
}
.bottom_but .qu_but{
  width: 30%;
  height:  38px;
  background-color: #FFFFFF;
  color: #224472;
  text-align: center;
  line-height: 190%;
  box-shadow: 3rpx	4rpx 16rpx 3rpx rgba(33, 87, 194, 0.3);
  border-radius: 20px;
}